<h1>Index Page</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Body</th>
      <th>Oprations</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td>
        <%= link_to 'View', article_path(article.id) %>
        <%= link_to 'Edit', edit_article_path(article.id) %>
        <%= link_to 'Destroy', article_path(article.id), method: :delete, data: { confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div>
  <%= link_to 'Add a new Article', new_article_path %>
</div>